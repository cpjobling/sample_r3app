<h1>Edit Profile</h1>

<%= form_for(@user) do |f| %>
  <input name ="_method" type="hidden" value="put" />
  <%= render :partial => 'form', :locals => { :f => f} %>
  <div class="actions">
    <%= f.submit "Update" %>
  </div>
  <div>
    <%= gravatar_for @user %>
    <%= link_to "change", "http://gravatar.com/emails", :target => "_blank" %>
  </div>
<% end %>